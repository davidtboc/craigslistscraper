   "outputs": [],
   "source": [
    "# 4!  = 4 x 3 x 2 x 1 = 24\n",
    "\n",
    "def factorial():\n",
    "    x = int(input(\"Enter a number: \"))\n",
    "    print(x)\n",
    "\n",
    "    number = 1\n",
    "    for i in range(1, x+1):\n",
    "        number = number * i\n",
    "\n",
    "    print(f\"the factorial of this number is {number}\")"
   ]
  },
